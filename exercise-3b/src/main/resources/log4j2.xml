<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{HH:mm:ss.SSS} [%c{1}] - %highlight{%marker}{INFO=green bright, TRACE=bright blue, WARN=bright yellow} %msg%n"/>
    </Console>
    </Appenders>
    <Loggers>
    <Root level="trace">
        <AppenderRef ref="Console"/>
    </Root>
    </Loggers>
</Configuration>